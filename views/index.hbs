  <link rel="stylesheet" href="./static/css/style.css">


  <title>Dynamic Website Using NodeJS</title>
</head>

<body>
  {{>navbar data=details}}

  {{>slider slides=slides}}


  {{!-- services section --}}
  <section id="servics_section" class="py-5 background2">

    <div class="container">
      <h1 class="text-center text-secondary">Services that we are provide</h1>

      <div class="row mt-3 ">
        {{#each service}}
        <div class="col-md-4 ">
          <div class="card  background3">
            <div class="card-body">
              <div class="container text-center service-icon">
                {{!-- <i class="fa-brands fa-studiovinari"></i> --}}
                <i class="{{this.icon}} text-secondary"></i>
              </div>
              <h5 class="card-title">{{this.title}}</h5>
              <p class="card-text">{{this.description}}</p>
              <a href="{{this.link}}" class="btn btn-primary">{{this.btnText}}</a>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </section>

  {{!-- about-us-section --}}

  <section id="about_us" class="py-5 background6">

    <div class="container">
      <h5 class=" text-secondary text-center">About Us</h5>

      <div class="row">
        <div class="col-md-6 ">
          <p class="text align-text-bottom">
          <h1 class="py-4">{{about.title}}</h1>
          {{about.description}}
          </p>
          <div class="text-left">
            <a href="#" class="btn btn-primary ">{{about.btnText}}</a>
          </div>
        </div>
        <div class="col-md-6">
          <img
            src="{{about.img}}"
            alt="about us" class="img-fluid">
        </div>
      </div>
    </div>
  </section>


  {{!-- contact-us-section --}}

  <section id="contact_us" class="py-4 background1">
    <div class="container">
      <h1 class="text-center text-secondary">Contact Us</h1>
      <div class="row">
        <div class="col-md-6">
          <form action="contact" method="POST">

            <div class="form-group">
              <label for="name">Name</label>
              <input type="text" name="name" id="name" class="form-control text-primary" placeholder="Enter your name">
            </div>

            <div class="form-group mt-3">
              <label for="email">Email</label>
              <input type="email" name="email" id="email" class="form-control text-primary" placeholder="Enter your email">
            </div>

            <div class="form-group mt-3">
              <label for="phone">Phone</label>
              <input type="text" name="phone" id="phone" class="form-control text-primary" placeholder="Enter your phone">
            </div>

            <div class="form-group mt-3">
              <label for="message">Message</label>
              <textarea name="message" id="message" class="form-control text-primary" placeholder="Enter your message"></textarea>
            </div>

            <div class="container text-center">
              <button type="submit" class="btn btn-primary mt-3">Submit</button>
            </div>

          </form>
        </div>
        <div class="col-md-6 background5">
          <div class="container">
            <img src="" alt="">
          </div>
        </div>
      </div>
  </section>




  <!-- Optional JavaScript -->
